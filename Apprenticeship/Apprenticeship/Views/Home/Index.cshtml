@if (!string.IsNullOrEmpty(ViewBag.SweetAlert))
{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Display SweetAlert when there's a success message
            Swal.fire({
                icon: 'success',
                title: '@ViewBag.SweetAlert',
                showConfirmButton: false,
                timer: 1500
            });
        });
    </script>
}
