<style>
    #contactus {
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .container_ {
        width: 80%; 
        max-width: 600px; 
    }

    form {
        display: grid;
        gap: 10px;
    }

    input,
    textarea {
        width: 100%;
        padding: 10px;
        box-sizing: border-box;
        border-radius: 0.5rem;
        border:none;
        margin: 3px;
    }

        input[type="submit"] {
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
        }
</style>

<div id="contactus" class="header" style="height:100vh">
    <div class="container_" style="margin-top: 50px;">
        <h2 style="font-size: 2.8rem;
    color: #fff;    padding: 0.375rem 0.875rem;
    display: inline-block;">
            Contact <span>Us!</span>
        </h2>
        <form action="/Home/Contact" method="post">
            <div>
                <input required type="text" name="FullName" placeholder="Full Name">
                <input required type="email" name="EmailAddress" placeholder="Email Address">
            </div>
            <div>
                <input required type="tel" name="MobileNumber" placeholder="Mobile Number">
                <input required type="text" name="EmailSubject" placeholder="Email Subject">
            </div>
            <textarea required name="Msg" id="msg" cols="30" rows="5" placeholder="Your Message" maxlength="200"></textarea>
            <input type="submit" value="Send Message">
        </form>

    </div>
</div>
