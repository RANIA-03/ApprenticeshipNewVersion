<div style="display: flex;justify-content: flex-end;margin-right: 190px">
    <div class=" col-xl-8 col-lg-8">
        <div class=" card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">Edit Team Lead</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="new-user-info">
                    <!-- ***************************************** -->
                    <form method="post" action="/TeamLeader/Edited?Id=@Model.Id" class="mt-5">
                        <div class="form-group col-md-12">
                            <label class="form-label" asp-for="fristName">First Name:</label>
                            <input type="text" class="form-control" asp-for="fristName"  value="@Model.fristName">
                            <span asp-validation-for="fristName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="form-label" asp-for="secondName">Second Name:</label>
                            <input type="text" class="form-control" asp-for="secondName" value="@Model.secondName">
                            <span asp-validation-for="secondName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="form-label" asp-for="thirdName">Third Name:</label>
                            <input type="text" class="form-control" asp-for="thirdName" value="@Model.thirdName">
                            <span asp-validation-for="thirdName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="form-label" asp-for="lastName">Last Name:</label>
                            <input type="text" class="form-control" asp-for="lastName" value="@Model.lastName">
                            <span asp-validation-for="lastName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="form-label" asp-for="PhoneNumber">Mobile Number:</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" value="@Model.PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                        </div>
                        <div class="form-group col-md-12">
                            <label class="form-label">Company:</label>
                            <select asp-for="companyId" class="selectpicker form-control" data-style="py-0">
                                <option>Select Company</option>
                                @foreach (var company in (List<Company>)(ViewBag.companies))
                                {
                                    if (@company.companyId == @Model.companyId)
                                    {
                                        <option selected value="@company.companyId">@company.companyName</option>
                                    }
                                    else
                                    {
                                        <option value="@company.companyId">@company.companyName</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="companyId" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="form-label" asp-for="Email">Email:</label>
                            <input type="email" class="form-control" asp-for="Email" value="@Model.Email">
                        </div>
                        <button type="submit" class="btn btn-primary">Edit</button>
                        <a href="/TeamLeader/Index" class="btn btn-danger">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/core/libs.min.js"></script>
<script src="~/assets/js/core/external.min.js"></script>
<script src="~/assets/js/charts/widgetcharts.js"></script>
<script src="~/assets/js/charts/vectore-chart.js"></script>
<script src="~/assets/js/charts/dashboard.js"></script>
<script src="~/assets/js/plugins/fslightbox.js"></script>
<script src="~/assets/js/plugins/setting.js"></script>
<script src="~/assets/js/plugins/slider-tabs.js"></script>
<script src="~/assets/js/plugins/form-wizard.js"></script>
<script src="~/assets/js/hope-ui.js" defer></script>

