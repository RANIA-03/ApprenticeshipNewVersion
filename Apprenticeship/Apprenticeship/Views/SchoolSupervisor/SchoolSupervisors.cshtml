@using Apprenticeship.Data.Entities
<link href="~/assets2/extra-libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/css/form.css" />
<style>
	tbody tr:hover {
		background-color: rgb(197, 228, 235) !important;
	}
</style>
<div style="    padding-left: 294px;
    margin-top: 40px;
    padding-right: 50px;">
	<div class="col-12">
		<div class="card">
			<div class="card-body">

				<div class="table-responsive">
					<div class="rowDispaly" style="display: flex;justify-content: space-between;width: 100%;align-items: center;margin-bottom: 20px;">
						<h4 class="card-title">School Supervisors</h4>
					</div>
					<table id="zero_config" class="table table-striped table-bordered no-wrap">
						<thead>
							<tr>
								<th>Name</th>
								<th>PhoneNumber</th>
								<th>Email</th>
								<th>School</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var schoolSupervisor in (List<SchoolSupervisor>)(ViewBag.SchoolSupervisors))
							{
								<tr>
									<td>@schoolSupervisor.fristName @schoolSupervisor.lastName</td>
									<td>@schoolSupervisor.PhoneNumber</td>
									<td>@schoolSupervisor.Email</td>
									<td>@schoolSupervisor.school.schoolName</td>
								</tr>
							}
						</tbody>
						<tfoot>
							<tr>
								<th>Name</th>
								<th>PhoneNumber</th>
								<th>Email</th>
								<th>School</th>
							</tr>
						</tfoot>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<script src="~/assets2/libs/jquery/dist/jquery.min.js"></script>
<script src="~/dist/js/app-style-switcher.js"></script>
<script src="~/assets2/extra-libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/dist/js/pages/datatable/datatable-basic.init.js"></script>
